<div class="jumbotron">
    <h1 class="display-3 text-center">Curt's Burgers</h1>
    <div class='container text-center'>
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca"><strong>Burger Name:</strong></label>
                <input type="text" id="ca" name="name">
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>



<div class='container'>
    <h1 class='text-center header'>The Wall of Burgers</h1>
    <div class='row'>

        <div class='col-5 backG'>
            <h2 class="text-center">Order Up!!</h2>

            <ul class="p-0">
                {{#each burgers}}
                {{#unless devoured}}
                
                    <div class="row">
                        <h2 class="ml-4 mb-4">{{this.burger_name}}</h2> <button data-id={{this.id}} class='dev float-right ml-4 mt-2'>Devour</button>
                    </div>

                
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-2"></div>
        <div class='col-5 backG'>
            <h2 class="text-center">Devoured YUM!!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <div class='row'>

                    <h2 class='ml-4 mb-4'>{{this.burger_name}}</h2>

                </div>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>